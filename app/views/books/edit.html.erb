<h1>Editing Book</h1>

<% if @book.errors.any?%>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<body>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <label>Title</label>
  <div class="text"><%= f.text_field :title %></div>
  <label>Body</label>
  <div class="text"><%= f.text_area :body %></div>

  <div class="text"><%= f.submit "Update Book" %></div>

<% end %>

<%= link_to "show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>
</body>