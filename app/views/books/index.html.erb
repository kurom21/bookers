<p id="notice"><%= flash[:notice] %></p>
<body>
<h1>Books</h1>
<table>
 <thead>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <th></th>
   </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book.id) %></td>
      <td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if @book.errors.any?%>
  <ul>
    <%# @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%# end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h2>New Book</h2>

  <label>Title</label>
  <div class="text"><%= f.text_field :title %></div>
  <label>Body</label>Body
  <div class="text"><%= f.text_area :body %></div>

  <div><%= f.submit "Create Book" %></div>

<% end %>
</body>
